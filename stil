/* Сначала применим стили к body для задания фона страницы */
body {
    background-color: #f0f0f0; /* Цвет фона страницы */
    display: flex;
    justify-content: center; /* Центрирование по горизонтали */
    align-items: center; /* Центрирование по вертикали */
    min-height: 100vh; /* Задаем высоту по высоте видимой области окна браузера */
    margin: 0; /* Убираем отступы */
    font-family: Arial, sans-serif; /* Хороший шрифт */
}

/* Теперь применим стили к блоку формы */
form {
    background-color: #ffffff; /* Цвет фона блока формы */
    padding: 20px; /* Поля вокруг формы */
    border-radius: 10px; /* Скругление углов блока */
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Тень блока */
    text-align: center; /* Выравнивание текста по центру */
    max-width: 400px; /* Максимальная ширина блока формы */
}

/* Стили для текстовых полей и меток */
label {
    display: block; /* Каждая метка на новой строке */
    margin-bottom: 10px; /* Отступ снизу метки */
}

input[type="text"],
input[type="date"],
select {
    width: 100%; /* Занимает всю доступную ширину */
    padding: 10px; /* Внутренние отступы */
    margin-bottom: 15px; /* Отступ снизу полей */
    border: 1px solid #ccc; /* Граница полей */
    border-radius: 5px; /* Скругление углов полей */
    font-family: Arial, sans-serif; /* Хороший шрифт */
}

/* Стили для кнопок */
input[type="submit"],
input[type="button"] {
    background-color: #4caf50; /* Цвет фона кнопок */
    color: #fff; /* Цвет текста кнопок */
    padding: 10px 20px; /* Внутренние отступы */
    border: none; /* Убираем границу */
    border-radius: 5px; /* Скругление углов */
    cursor: pointer; /* Изменение курсора при наведении */
}

/* Стили для кнопки "Sterge" (как дополнительная кнопка) */
input[type="button"] {
    background-color: #ff3333; /* Изменяем цвет фона для кнопки "Sterge" */
}

/* Стили для адаптивности */
@media (max-width: 600px) {
    form {
        max-width: 90%; /* Уменьшаем максимальную ширину блока на маленьких экранах */
    }
}
